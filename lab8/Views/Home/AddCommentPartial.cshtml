@model lab8.Models.Comment

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="row">
        <legend class="col-sm-12">Comment</legend>

        <div class="editor-label col-sm-2">
            @Html.LabelFor(model => model.AutorName)
        </div>
        <div class="editor-field col-sm-10">
            @Html.TextBoxFor(model => model.AutorName, new { @class ="form-control" })
            @Html.ValidationMessageFor(model => model.AutorName)
        </div>

        <div class="editor-label col-sm-2">
            @Html.LabelFor(model => model.Comment1)
        </div>
        <div class="editor-field col-sm-10">
            @Html.TextBoxFor(model => model.Comment1, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Comment1)
        </div>

        @Html.HiddenFor(model => model.IdPost)

        @*<div class="editor-label">
            @Html.LabelFor(model => model.IdPost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdPost)
            @Html.ValidationMessageFor(model => model.IdPost)
        </div>*@

        <p class="col-sm-12">
            <input type="submit" value="Create" class="btn btn-default" />
        </p>
    </fieldset>
}
